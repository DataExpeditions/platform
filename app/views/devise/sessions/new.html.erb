<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :vertical_input_group) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
