<% scope = :dashboard if local_assigns[:scope].nil? %>
<%= simple_form_for([scope, @study], wrapper:  :vertical_input_group, html: { data: { behavior: 'tinymce-upload' } }) do |f| %>
  <%= f.input :category_id, collection: Category.all, selected: f.object.category_id %>
  <%= f.input :title %>
  <%= f.input :summary %>
  <%= f.input :body, input_html: { data: { behavior: 'tinymce-upload-input' } } %>
  <%= f.input :github_url %>
  <%= f.submit @study.new_record? ? "Proposer l'étude" : (@study.deleted? ? "Réstaurer l'étude" : "Modifier l'étude") %>
<%- end %>
